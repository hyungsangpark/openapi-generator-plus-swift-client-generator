import Foundation

extension URLSession {

	static var apiSession = URLSession(configuration: .default)
    
    static func handleApiRequest(_ request: URLRequest, completion: @escaping ((_ response: HTTPURLResponse?, _ data: Data?, _ error: Error?) -> Void)) {

        apiSession.dataTask(with: request) { data, response, error in
            completion(response as? HTTPURLResponse, data, error)
        }.resume()
        
	}

}
